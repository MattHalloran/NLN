{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "type": "module",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "yarn tsc && yarn post-build",
    "post-build": "cp -R src/worker/email/templates dist/worker/email/",
    "setup-prisma": "yarn prisma introspect && yarn prisma generate",
    "start-development": "yarn build && nodemon --experimental-modules --experimental-specifier-resolution=node dist/index.js",
    "start-production": "yarn build && node --experimental-modules --experimental-specifier-resolution=node dist/index.js",
    "migrate-create": "knex migrate:make --knexfile ./src/db/knexfile.js --esm",
    "seed-make": "knex seed:make --knexfile ./src/db/knexfile.js --esm",
    "seed-run": "knex seed:run --knexfile ./src/db/knexfile.js --specific init.js --esm",
    "migrate-latest": "knex migrate:latest --env development --knexfile ./src/db/knexfile.js --esm",
    "migrate-rollback": "knex migrate:rollback --knexfile ./src/db/knexfile.js --esm",
    "clean": "node --experimental-modules --experimental-specifier-resolution=node ./tools/cleanImageData.js",
    "prisma-generate": "prisma generate --schema src/db/schema.prisma",
    "graphql-generate": "graphql-codegen && mv generatedTypes.ts src/schema/types.ts"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@local/shared": "1.0.0",
    "@paljs/plugins": "^3.8.0",
    "@prisma/client": "^2.30.2",
    "apollo-server-express": "^2.25.0",
    "arrify": "^3.0.0",
    "bcrypt": "^5.0.1",
    "bull": "^3.22.4",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "eslint": "^7.31.0",
    "express": "^4.17.1",
    "graphql": "^15.5.1",
    "graphql-upload": "^12.0.0",
    "heic-convert": "^1.2.4",
    "imghash": "^0.0.9",
    "jsonwebtoken": "^8.5.1",
    "knex": "0.95.5",
    "lodash": "^4.17.21",
    "nodemailer": "^6.6.0",
    "nodemon": "^2.0.7",
    "pg": "^8.7.1",
    "probe-image-size": "^7.2.1",
    "redis": "^4.0.6",
    "sharp": "^0.28.3",
    "subscriptions-transport-ws": "^0.9.19",
    "twilio": "^3.61.0",
    "typescript": "^4.2.4",
    "winston": "^3.7.2",
    "xlsx": "^0.17.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.6.2",
    "@graphql-codegen/typescript": "^2.4.8",
    "@types/bull": "^3.15.8",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.13",
    "@types/graphql-upload": "^8.0.11",
    "@types/node": "^17.0.30",
    "@types/nodemailer": "^6.4.4"
  }
}
