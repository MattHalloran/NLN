{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ES2022"
        ],
        "module": "ESNext",
        "noEmit": true,
        "jsx": "react-jsx",
        "baseUrl": "./src",
        "types": [
            "vite/client",
            "node",
            "react",
            "react-dom"
        ],
        "noUnusedLocals": false,
        "noUnusedParameters": false
    },
    "include": [
        "src",
        "fonts.d.ts",
        "types.d.ts",
        "sw-template.js"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/*.spec.ts",
        "**/*.spec.tsx",
        "**/__tests__/**",
        "**/__mocks__/**",
        "**/setupTests.ts"
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}