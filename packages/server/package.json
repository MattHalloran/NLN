{
    "name": "server",
    "version": "2.2.4",
    "description": "",
    "main": "dist/index.js",
    "type": "module",
    "directories": {
        "test": "tests"
    },
    "prisma": {
        "schema": "./dist/db/schema.prisma",
        "seed": "./dist/db/seeds/init.js"
    },
    "scripts": {
        "test": "jest --coverage --config jest.config.cjs",
        "pre-build": "yarn pre-build-prisma",
        "pre-build-prisma": "mkdir -p dist/db && [ -f src/db/schema.prisma ] && cp src/db/schema.prisma dist/db/schema.prisma || echo 'schema.prisma not found, skipping copy' && [ -d src/db/migrations ] && rm -rf dist/db/migrations && cp -r src/db/migrations dist/db/migrations || echo 'migrations directory not found, skipping copy' && prisma migrate deploy && yarn prisma-generate",
        "build": "yarn tsc && yarn post-build",
        "post-build": "cp -R src/worker/email/templates dist/worker/email/",
        "start-development": "yarn pre-build && yarn build && nodemon --experimental-modules --experimental-specifier-resolution=node --inspect=0.0.0.0:9229 dist/index.js",
        "start-production": "node --experimental-modules --experimental-specifier-resolution=node dist/index.js",
        "prisma-generate": "prisma generate",
        "graphql-generate": "graphql-codegen && mv generatedTypes.ts src/schema/types.ts"
    },
    "author": "",
    "license": "MIT",
    "dependencies": {
        "@local/shared": "*",
        "@paljs/plugins": "^3.8.0",
        "@prisma/client": "4.0.0",
        "apollo-server-express": "^2.25.0",
        "arrify": "^3.0.0",
        "bcrypt": "^5.0.1",
        "bull": "^4.10.4",
        "cookie-parser": "^1.4.5",
        "cors": "^2.8.5",
        "eslint": "^7.31.0",
        "express": "^4.17.1",
        "graphql": "^15.5.1",
        "graphql-upload": "^12.0.0",
        "heic-convert": "^1.2.4",
        "imghash": "^0.0.9",
        "jsonwebtoken": "^9.0.0",
        "lodash": "^4.17.21",
        "nodemailer": "^6.6.0",
        "nodemon": "^2.0.7",
        "pg": "^8.7.1",
        "prisma": "4.12.0",
        "probe-image-size": "^7.2.1",
        "redis": "4.4.0",
        "sharp": "^0.28.3",
        "subscriptions-transport-ws": "^0.9.19",
        "twilio": "^3.61.0",
        "typescript": "4.9.5",
        "uuid": "^9.0.0",
        "winston": "^3.7.2",
        "xlsx": "^0.18.5"
    },
    "devDependencies": {
        "@graphql-codegen/cli": "^2.6.2",
        "@graphql-codegen/typescript": "^2.4.8",
        "@swc/cli": "^0.1.63",
        "@swc/core": "^1.3.104",
        "@swc/jest": "^0.2.30",
        "@types/bcrypt": "^5.0.0",
        "@types/bull": "^3.15.8",
        "@types/cookie-parser": "^1.4.3",
        "@types/express": "^4.17.13",
        "@types/graphql-upload": "^8.0.11",
        "@types/heic-convert": "^1.2.0",
        "@types/jest": "^29.5.6",
        "@types/jsonwebtoken": "^8.5.5",
        "@types/node": "^17.0.35",
        "@types/nodemailer": "^6.4.4",
        "@types/probe-image-size": "^7.0.1",
        "@types/sharp": "^0.30.2",
        "@types/uuid": "^8.3.4",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.1"
    }
}
