{
    "name": "server",
    "version": "2.2.5",
    "description": "",
    "main": "dist/index.js",
    "directories": {
        "test": "tests"
    },
    "prisma": {
        "schema": "./dist/db/schema.prisma",
        "seed": "./dist/db/seeds/init.js"
    },
    "scripts": {
        "test": "jest --coverage --config jest.config.cjs",
        "pre-build": "yarn pre-build-prisma",
        "pre-build-prisma": "mkdir -p dist/db && [ -f src/db/schema.prisma ] && cp src/db/schema.prisma dist/db/schema.prisma || echo 'schema.prisma not found, skipping copy' && [ -d src/db/migrations ] && rm -rf dist/db/migrations && cp -r src/db/migrations dist/db/migrations || echo 'migrations directory not found, skipping copy' && prisma migrate deploy && yarn prisma-generate",
        "build": "yarn tsc && yarn post-build",
        "post-build": "cp -R src/worker/email/templates dist/worker/email/ && cp -R src/data dist/",
        "start-development": "yarn pre-build && yarn build && nodemon dist/index.js",
        "start-development-wasm": "yarn pre-build && yarn build && nodemon --max-old-space-size=4096 --wasm-max-initial-code-space-reservation=1048576 dist/index.js",
        "dev": "yarn pre-build && yarn build && node --max-old-space-size=4096 --wasm-max-initial-code-space-reservation=1048576 dist/index.js",
        "start-development-debug": "yarn pre-build && yarn build && nodemon --max-old-space-size=4096 --wasm-max-initial-code-space-reservation=1048576 --inspect=0.0.0.0:9229 dist/index.js",
        "start-production": "bash scripts/start-production.sh",
        "prisma-generate": "prisma generate",
        "graphql-generate": "graphql-codegen && mv generatedTypes.ts src/schema/types.ts",
        "lint": "ESLINT_USE_FLAT_CONFIG=false eslint src --ext .ts,.tsx",
        "lint:fix": "ESLINT_USE_FLAT_CONFIG=false eslint src --ext .ts,.tsx --fix",
        "format": "prettier --write \"src/**/*.{ts,tsx,json}\"",
        "format:check": "prettier --check \"src/**/*.{ts,tsx,json}\"",
        "typecheck": "tsc --noEmit"
    },
    "author": "",
    "license": "MIT",
    "dependencies": {
        "@local/shared": "*",
        "@prisma/client": "6.1.0",
        "@types/multer": "^2.0.0",
        "bcrypt": "^5.0.1",
        "bull": "^4.10.4",
        "cookie-parser": "^1.4.5",
        "cors": "^2.8.5",
        "exceljs": "^4.4.0",
        "express": "^4.17.1",
        "heic-convert": "^2.1.0",
        "imghash": "^0.0.9",
        "jsonwebtoken": "^9.0.0",
        "lodash": "^4.17.21",
        "multer": "^2.0.2",
        "nodemailer": "^6.6.0",
        "prisma": "6.1.0",
        "probe-image-size": "^7.2.1",
        "redis": "4.4.0",
        "sharp": "^0.34.3",
        "twilio": "^5.9.0",
        "typescript": "4.9.5",
        "winston": "^3.7.2"
    },
    "devDependencies": {
        "@swc/core": "^1.3.104",
        "@swc/jest": "^0.2.30",
        "@types/bcrypt": "^5.0.0",
        "@types/bull": "^3.15.8",
        "@types/cookie-parser": "^1.4.3",
        "@types/cors": "^2.8.19",
        "@types/express": "^4.17.13",
        "@types/heic-convert": "^1.2.0",
        "@types/jest": "^30.0.0",
        "@types/jsonwebtoken": "^8.5.5",
        "@types/node": "^24.5.2",
        "@types/nodemailer": "^6.4.4",
        "@types/probe-image-size": "^7.0.1",
        "@types/sharp": "^0.30.2",
        "@typescript-eslint/eslint-plugin": "^8.44.1",
        "@typescript-eslint/parser": "^8.44.1",
        "camelcase": "^6.3.0",
        "eslint": "^9.36.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "husky": "^9.1.7",
        "jest": "^29.7.0",
        "lint-staged": "^16.2.3",
        "nodemon": "^3.1.10",
        "prettier": "^3.6.2"
    }
}
