{
    "exec": "node",
    "ignore": [".git", "node_modules", "*.test.ts", "dist"],
    "watch": ["./src"],
    "ext": "ts,js", 
    "events": {
        "start": "echo 'Nodemon starting server...'",
        "restart": "echo 'File change detected, rebuilding...' && yarn build"
    },
    "delay": 3000,
    "env": {
        "NODE_ENV": "development"
    },
    "verbose": false
}