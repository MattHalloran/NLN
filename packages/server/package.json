{
    "name": "server",
    "version": "3.0.0",
    "description": "",
    "main": "dist/index.js",
    "directories": {
        "test": "tests"
    },
    "prisma": {
        "schema": "./dist/db/schema.prisma",
        "seed": "./dist/db/seeds/init.js"
    },
    "scripts": {
        "test": "vitest run --coverage",
        "test:watch": "vitest",
        "test:ui": "vitest --ui",
        "pre-build": "yarn pre-build-prisma",
        "pre-build-prisma": "mkdir -p dist/db && [ -f src/db/schema.prisma ] && cp src/db/schema.prisma dist/db/schema.prisma || echo 'schema.prisma not found, skipping copy' && [ -d src/db/migrations ] && rm -rf dist/db/migrations && cp -r src/db/migrations dist/db/migrations || echo 'migrations directory not found, skipping copy' && prisma migrate deploy && yarn prisma-generate",
        "build": "yarn tsc && yarn post-build",
        "post-build": "cp -R src/worker/email/templates dist/worker/email/ && cp -R src/data dist/",
        "start-development": "bash -c 'set -a; [ -f .env ] && source .env; set +a; yarn pre-build && yarn build && nodemon dist/index.js'",
        "start-development-wasm": "yarn pre-build && yarn build && nodemon --max-old-space-size=4096 --wasm-max-initial-code-space-reservation=1048576 dist/index.js",
        "dev": "yarn pre-build && yarn build && node --max-old-space-size=4096 --wasm-max-initial-code-space-reservation=1048576 dist/index.js",
        "start-development-debug": "yarn pre-build && yarn build && nodemon --max-old-space-size=4096 --wasm-max-initial-code-space-reservation=1048576 --inspect=0.0.0.0:9229 dist/index.js",
        "start-production": "bash scripts/start-production.sh",
        "prisma-generate": "prisma generate",
        "lint": "eslint src",
        "lint:fix": "eslint src --fix",
        "format": "prettier --write \"src/**/*.{ts,tsx,json}\"",
        "format:check": "prettier --check \"src/**/*.{ts,tsx,json}\"",
        "typecheck": "tsc --noEmit"
    },
    "author": "",
    "license": "MIT",
    "dependencies": {
        "@local/shared": "*",
        "@prisma/client": "6.1.0",
        "@types/multer": "^2.0.0",
        "bcrypt": "^5.0.1",
        "bcryptjs": "^3.0.2",
        "bull": "^4.10.4",
        "cookie-parser": "^1.4.5",
        "cors": "^2.8.5",
        "csrf-csrf": "^4.0.3",
        "exceljs": "^4.4.0",
        "express": "^4.17.1",
        "express-rate-limit": "^8.1.0",
        "heic-convert": "^2.1.0",
        "helmet": "^8.1.0",
        "imghash": "^0.0.9",
        "jsonwebtoken": "^9.0.0",
        "lodash": "^4.17.21",
        "multer": "^2.0.2",
        "nodemailer": "^6.6.0",
        "prisma": "6.1.0",
        "probe-image-size": "^7.2.1",
        "redis": "4.4.0",
        "sharp": "^0.34.3",
        "twilio": "^5.9.0",
        "typescript": "4.9.5",
        "winston": "^3.7.2"
    },
    "devDependencies": {
        "@testcontainers/postgresql": "^11.7.1",
        "@types/bcrypt": "^5.0.0",
        "@types/bcryptjs": "^3.0.0",
        "@types/bull": "^3.15.8",
        "@types/cookie-parser": "^1.4.3",
        "@types/cors": "^2.8.19",
        "@types/express": "^4.17.13",
        "@types/heic-convert": "^1.2.0",
        "@types/jsonwebtoken": "^8.5.5",
        "@types/node": "^24.5.2",
        "@types/nodemailer": "^6.4.4",
        "@types/probe-image-size": "^7.0.1",
        "@types/sharp": "^0.30.2",
        "@types/supertest": "^6.0.3",
        "@typescript-eslint/eslint-plugin": "^8.44.1",
        "@typescript-eslint/parser": "^8.44.1",
        "@vitest/coverage-v8": "^3.2.4",
        "@vitest/ui": "^3.2.4",
        "nodemon": "^3.1.10",
        "prettier": "^3.6.2",
        "supertest": "^7.1.4",
        "testcontainers": "^11.7.1",
        "vitest": "^3.2.4"
    }
}
