{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Docker: Attach to Node",
            "type": "node",
            "request": "attach",
            "remoteRoot": "/srv/app/packages/server",
            "localRoot": "${workspaceFolder}/packages/server",
            "port": 9230,
            "address": "localhost",
            "protocol": "inspector",
            "restart": true,
            "sourceMaps": true,
            "skipFiles": [
                "/node_modules/**/*.js"
            ],
            "dockerRunCommand": "--env --publish 5330:5330 --publish 9230:9230 --name ${containerName} ${image}",
        }
    ]
}